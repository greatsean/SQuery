<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sean.myquery.file.FileListActivity">

    <CheckBox
        android:id="@+id/select_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/photo_imv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toRightOf="@+id/select_cb"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_txt_color"
        app:layout_constraintLeft_toRightOf="@+id/photo_imv"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/path_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main_gray_txt_color"
        app:layout_constraintLeft_toLeftOf="@+id/name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"/>
</android.support.constraint.ConstraintLayout>
